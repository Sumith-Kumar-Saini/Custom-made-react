{
  "name": "custom-made-react",
  "version": "1.0.2",
  "description": "A lightweight custom implementation of React's core concepts including Virtual DOM, Components, and Hooks",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node ./dist/index.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run start\"",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "react",
    "virtual-dom",
    "vdom",
    "custom-react",
    "typescript",
    "components",
    "hooks"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
